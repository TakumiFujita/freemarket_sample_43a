= render 'shared/users_header'
.address__info__main
  %section.address__info__container
    %h2.address__info--head 住所入力
    %form.address__info--inner
      .address__info__content
        .form__group
          %label{ for: 'first_name' } お名前
          %span.form__require 必須
          %input.input__default{ type: 'text', name: 'first_name', placeholder: "例) 山田" }
          %input.input__default{ type: 'text', name: 'last_name', placeholder: "例) 彩" }
        .form__group
          %label{ for: 'first_name_kana' } お名前カナ
          %span.form__require 必須
          %input.input__default{ type: 'text', name: 'first_name_kana', placeholder: "例) ヤマダ" }
          %input.input__default{ type: 'text', name: 'last_name_kana', placeholder: "例) アヤ" }
        .form__group
          %label{ for: 'phone' } 電話
          %span.form__require 必須
          %input.input__default{ type: 'text', name: 'phone', placeholder: "例) 09012345678" }
        .form__group
          %label{ for: 'postal_code' } 郵便番号
          %span.form__require 必須
          %input.input__default{ type: 'text', name: 'postal_code', placeholder: "123-4567" }
        .form__group
          %label{ for: 'prefectures' } 都道府県
          %span.form__require 必須
          .select__wrap
            %select.select__default{ type: 'text', name: 'prefectures' }
            .icon__arrow__bottom
              %i.fa.fa-angle-down
        .form__group
          %label{ for: 'city' } 市区町村
          %span.form__require 必須
          %input.input__default{ type: 'text', name: 'city', placeholder: "例) 横浜市緑区" }
        .form__group
          %label{ for: 'block' } 番地
          %span.form__require 必須
          %input.input__default{ type: 'text', name: 'block', placeholder: "例) 青山1-1-1" }
        .form__group
          %label{ for: 'buildning' } 建物名
          %span.form__any 任意
          %input.input__default{ type: 'text', name: 'building', placeholder: "例) メルカリビル103" }
        .form__group
          %button.btn__default.btn__red{ type: 'submit' } 次へ進む
= render 'shared/second_footer'
