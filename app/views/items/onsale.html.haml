= render 'shared/header'
- if flash[:success]
  .delete-success-flash
    .delete-success-flash__text
      = flash[:success]
    .delete-success-flash__close.close-btn
      ×

%main.onsale
  .onsale__content
    .onsale__content__trade
      %h2 出品した商品
      %ul.onsale__content__trade__tabs
        %li.onsale__content__trade__tabs__onsale
          %h3
            = link_to onsale_user_items_path do
              出品中
        %li.onsale__content__trade__tabs__orderd
          %h3
            = link_to orderd_user_items_path do
              取引中
        %li.onsale__content__trade__tabs__sold
          %h3
            = link_to sold_user_items_path do
              売却済み
      .onsale__content__trade__content
        %ul.onsale__content__trade__content__during
          - if @items.present?
            - @items.each do |item|
              - unless item.order_statuses.present?
                %li.onsale__content__trade__content__during__list
                  = render partial: 'shared/item-list', locals: { item: item }
          - else
            %li.onsale__content__trade__content__during__none
              出品中の商品がありません
  = render 'shared/mypage-side-nav'
= render 'shared/footer'
= render 'shared/sellbtn'
