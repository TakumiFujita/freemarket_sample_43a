%li
  =link_to "#", class: "item-link" do
    .item-link__img
      =image_tag("#{item.item_photos.first.image}", size: "48x48")
    .item-link__text
      = item.name
      .item-link__text__time
        %time
          %i.far.fa-heart
          %span 10
          %i.far.fa-comment-alt
          %span 10
    = fa_icon "angle-right"
