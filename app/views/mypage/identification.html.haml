= render 'shared/header'
%main.my-indentification
  = render 'mypage/mypage-side-nav'
  %section.myinfo.mypage-identification
    %h2.myinfo__head 本人情報の登録
    %p.myinfo__text-center お客さまのあんしん・あんぜんな取引のため、本人情報のご登録をお願いしております。
    %form.myinfo__form{action: "#", method: "POST", novalidate: ""}
      .myinfo__form__group
        %label お名前
        %span.myinfo__form__group__require 必須
        %input.myinfo__form__group__form{name: "last_name", placeholder: "例）山田", type: "text", value: "松本"}
        %input.myinfo__form__group__form{name: "first_name", placeholder: "例）彩", type: "text", value: "人志"}
      .myinfo__form__group
        %label お名前カナ
        %span.myinfo__form__group__require 必須
        %input.myinfo__form__group__form{name: "family_name_kana", placeholder: "例）ヤマダ", type: "text", value: "マツモト"}
        %input.myinfo__form__group__form{name: "first_name_kana", placeholder: "例）アヤ", type: "text", value: "ヒトシ"}
      .myinfo__form__group
        %label{for: "postal_code"} 郵便番号
        %span.myinfo__form__group__arbitraty 任意
        %input.myinfo__form__group__form{name: "zip_code", placeholder: "例）1234567", type: "text", value: "1234567"}
      .myinfo__form__group
        %label{for: "region"} 都道府県
        %span.myinfo__form__group__require 必須
        .myinfo__form__group__select-wrap
          %select.select__default{name: "region"}
          = fa_icon "angle-down"
      .myinfo__form__group
        %label{for: "region"} 市区町村
        %span.myinfo__form__group__require 必須
        %input.myinfo__form__group__form{name: "city", placeholder: "例）横浜市緑区", type: "text", value: "尼崎市何々区"}
      .myinfo__form__group
        %label{for: "address1_label"} 番地
        %span.myinfo__form__group__require 必須
        %input.myinfo__form__group__form{name: "address1", placeholder: "例）青山1−1−1", type: "text", value: "ダウンタウン１丁目"}
      .myinfo__form__group
        %label{for: "address2_label"} 建物名
        %span.myinfo__form__group__arbitraty 任意
        %input.myinfo__form__group__form{name: "address2", placeholder: "例）柳ビル103", type: "text", value: ""}
      .myinfo__form__group
        %label{for: "birthday"} 生年月日
        %span.myinfo__form__group__require 必須
        %br
        .myinfo__form__group__birth-select-wrap
          .select-wrap.select-wrap__year
            %select.select__default{name: "year"}
            %span 年
            = fa_icon "angle-down"
        .myinfo__form__group__birth-select-wrap
          .select-wrap.select-wrap__month
            %select.select__default{name: "month"}
            %span 月
            = fa_icon "angle-down"
        .myinfo__form__group__birth-select-wrap
          .select-wrap.select-wrap__day
            %select.select__default{name: "day"}
            %span 日
            = fa_icon "angle-down"
        %p.myinfo__form__form-info
          ※出品されたことがある、本人情報未登録のお客さまもご対象となります。
        %input{name: "birthday", type: "hidden", value: "19900907"}
        .clearfix
      %button.myinfo__form__btn{type: "submit"} 登録する
      .myinfo__form__group-right
        = link_to "#", target: "blank", class: "myinfo__form__group-right__link" do
          %span 本人情報の登録について
          =fa_icon "angle-right"
      %input{name: "", type: "hidden", value: ""}
= render 'shared/footer'
= render 'shared/sellbtn'
