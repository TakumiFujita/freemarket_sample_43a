= render 'shared/second_header'
.signup__main
  %section.signup__container
    %h2.signup--head 新規会員登録
    .signup--inner
      .signup__content
        = link_to new_user_registration_path, class: 'btn__default btn__mail' do
          .icon__mail
            %i.far.fa-envelope
          メールアドレスで登録
        = link_to user_facebook_omniauth_authorize_path, class: 'btn__default btn__sns-facebook', id: 'facebook' do
          .icon__facebook
            %i.fab.fa-facebook
          Facebookで登録
        = link_to user_google_oauth2_omniauth_authorize_path, class: 'btn__default btn__sns btn__sns-google' do
          .icon__google-plus
            %i.fab.fa-google-plus-g
          Googleで登録
  %form#login__form__facebook{ novalidate: 'novalidate' }
    %input{ type: 'hidden', name:'__crsf_value' }
    %input{ type: 'hidden', name:'nickname' }
    %input{ type: 'hidden', name:'email' }
    %input{ type: 'hidden', name:'facebook_user_id' }
    %input{ type: 'hidden', name:'facebook_access_token' }
    %input{ type: 'hidden', name:'login_type', value:'facebook' }
  %form#login__form__google{ novalidate: 'novalidate' }
    %input{ type: 'hidden', name:'__crsf_value' }
    %input{ type: 'hidden', name:'nickname' }
    %input{ type: 'hidden', name:'email' }
    %input{ type: 'hidden', name:'google_user_id' }
    %input{ type: 'hidden', name:'google_access_token' }
    %input{ type: 'hidden', name:'login_type', value:'facebook' }
  %input#google__client__id{ type: 'hidden' }
  %input#facebook__app__id{ type: 'hidden' }
.signup--gray-bar--adjust
= render 'shared/second_footer'
